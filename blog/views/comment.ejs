<div class="comments">
<% post.comments.forEach(function (comment, index) { %>
    <div class="comment_item">    
        <p>
            <a href="<%= comment.website %>"><%= comment.name %></a>
            <span class="info"> 回复于 <%= comment.time %></span>
        </p>
        <p class="conmment_content"><%= comment.content %></p>
    </div>    
<% }) %>

<form method="post" action="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
<% if (user) { %>
  姓名：<input type="text" class = "text" name="name" value="<%= user.name %>" /><br />
  邮箱：<input type="text" class = "text" name="email" value="<%= user.email %>" /><br />
  网址：<input type="text" class = "text" name="website" value="/u/<%= user.name %>" /><br />
<% } else { %>
  姓名：<input type="text" name="name" class = "text" /><br />
  邮箱：<input type="text" name="email" class = "text" /><br />
  网址：<input type="text" name="website" value="http://" class = "text"/><br />
<% } %>
  <textarea name="content" rows="5" cols="80" class="panel"></textarea><br />
  <input type="submit" value="留言" class="btn"/>
</form>
</div>